<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una novedad</h4>
            <form action="/admin/novedades/agregar" method="post">
                <div class="mb-3 row"> <!-- Corrected class name -->
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="mb-3 row">
                    <textarea class="form-control" placeholder="Subtitulo" name="subtitulo"></textarea>
                </div>
                <div class="mb-3 row">
                    <textarea class="form-control" placeholder="Cuerpo" name="cuerpo"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
                {{#if error}}
                <p>{{mensaje}}</p>
                {{/if}}
            </form>
        </div>
    </div>
</div>
